#include<stdio.h>
int main(){
	//菱形上半部
	int i,j,n;
    printf("please enter:");
    scanf("%d",&n);
		for(j=0;j<n-1-2*i;j++){
	for(i=0;i<(n+1)/2;i++){
			printf(" ");
		}
		for(j=0;j<2*i+1;j++){
			printf("* ");	
		}
		printf("\n");//记得每打完一行就要换行
	}
		//菱形下半部 
		for(i=0;i<(n+1)/2-1;i++){
	        for(j=0;j<2*i+2;j++){
	        printf(" ");	
			}	
		for(j=0;j<n-2-2*i;j++){
			printf("* ");
		}
		printf("\n");//换行
		
		}	
	printf("\n");	//这里可以省略
	}
